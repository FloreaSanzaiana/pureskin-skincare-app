<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/light_pastel_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/chat_bot"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to SkinSmart Assistant!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="12dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get information about ingredients, products, and skin concerns. Ask me anything!"
            android:textSize="15sp"
            android:textColor="#64748B"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.cardview.widget.CardView>