<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButtonStyle">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="CustomNumberPickerStyle">
        <item name="android:textColor">#00000000</item>
        <item name="android:divider">#00000000</item>
    </style>

    <style name="SkincareRadioButton">
        <item name="android:buttonTint">@color/dark_blue</item>
        <item name="android:textColor">@color/pastel_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="CalendarViewTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">#2563EB</item>
        <item name="android:colorAccent">#3B82F6</item>
        <item name="android:textColorPrimary">#374151</item>
        <item name="android:textColorSecondary">#6B7280</item>
    </style>

</resources>
