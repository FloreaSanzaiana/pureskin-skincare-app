<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/filterContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Has SPF:"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/hasSpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="yes"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area:"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/facearea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="face"
            android:layout_marginStart="16dp" />

        <CheckBox
            android:id="@+id/liparea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lips"
            android:layout_marginStart="16dp" />

        <CheckBox
            android:id="@+id/eyearea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="eyes"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time of the day:"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/nighttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="night"
            android:layout_marginStart="16dp" />

        <CheckBox
            android:id="@+id/daytime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product type:"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:textSize="15sp" />

        <GridLayout
            android:id="@+id/productTypeGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <CheckBox
                android:id="@+id/remover"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="makeup remover"
                android:layout_marginEnd="8dp" />

            <CheckBox
                android:id="@+id/cleanser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="cleanser" />

            <CheckBox
                android:id="@+id/spray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="spray"
                android:layout_marginEnd="8dp" />

            <CheckBox
                android:id="@+id/oil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="oil" />

            <CheckBox
                android:id="@+id/moisturiser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="moisturiser"
                android:layout_marginEnd="8dp" />

            <CheckBox
                android:id="@+id/serum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="serum" />

            <CheckBox
                android:id="@+id/mask"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="mask"
                android:layout_marginEnd="8dp" />

            <CheckBox
                android:id="@+id/peel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="peel" />

            <CheckBox
                android:id="@+id/toner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="toner"
                android:layout_marginEnd="8dp" />

            <CheckBox
                android:id="@+id/exfoliator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="exfoliator" />

            <CheckBox
                android:id="@+id/sunscreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="sunscreen"
                android:layout_marginEnd="8dp" />
        </GridLayout>

        <Button
            android:id="@+id/showFilteredButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Products"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/dark_blue" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
