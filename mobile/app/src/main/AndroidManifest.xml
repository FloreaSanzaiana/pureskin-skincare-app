<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />



    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication2"
        tools:targetApi="31">

        <receiver
            android:name=".ui.NotificationReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:exported="true"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity"></activity>
        <activity android:name=".ui.RegisterActivity"></activity>
        <activity android:name=".ui.ForgotPasswordActivity"></activity>
        <activity android:name=".ui.MainMenuActivity"></activity>
        <activity android:name=".ui.VerifyCodeActivity"></activity>
        <activity android:name=".ui.ResetPasswordActivity"></activity>
        <activity android:name=".ui.ProductsActivity"></activity>
        <activity
            android:name=".ui.ChatActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"></activity>
        <activity android:name=".ui.RecommendationsActivity"></activity>
        <activity android:name=".ui.DiaryActivity"></activity>
        <activity android:name=".ui.EveningRoutineActivity"></activity>
        <activity android:name=".ui.MorningRoutineActivity"></activity>
        <activity android:name=".ui.TodayDiaryActivity"></activity>
        <activity android:name=".ui.UserDetailsActivity"></activity>
        <activity android:name=".ui.RegisterActivity2"></activity>
        <activity android:name=".ui.IntroFlowRegister"></activity>
        <activity android:name=".ui.AgeFlowRegister"></activity>
        <activity android:name=".ui.SkinTypeFlow"></activity>
        <activity android:name=".ui.SkinPhotoTypeFlow"></activity>
        <activity android:name=".ui.SkinSensitivityFlow"></activity>
        <activity android:name=".ui.ConcernsFlow"></activity>
        <activity android:name=".ui.CommitRegister"></activity>
        <activity android:name=".ui.AccountSettingsActivity"></activity>
        <activity android:name=".ui.ProductTypeRecommend"></activity>
        <activity android:name=".ui.LoadingActivity"></activity>
        <activity android:name=".ui.ProductRecommendationResult"></activity>
        <activity android:name=".ui.RoutineTypeRecommendation"></activity>
        <activity android:name=".ui.RecommendedRoutineResult"></activity>
        <activity android:name=".ui.EditRoutinesActivity"></activity>
        <activity android:name=".ui.RoutineDetailsActivity"></activity>
        <activity android:name=".ui.ModifyStepsActivity"></activity>
        <activity android:name=".ui.DailyLogActivity"></activity>

    </application>

</manifest>