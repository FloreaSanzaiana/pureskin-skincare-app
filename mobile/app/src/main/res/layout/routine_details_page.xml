<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/morning" />

                <TextView
                    android:id="@+id/routine_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="150dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:text="Morning Routine"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="135dp"
                    android:layout_marginStart="20dp"
                    android:text="SUNDAY, 18 MAY"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/light_grey"
                    android:shadowColor="#80000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="50dp"
                    android:background="#00000000"
                    android:contentDescription="button"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/back2" />

                <ImageButton
                    android:id="@+id/notification"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="400dp"
                    android:layout_marginTop="50dp"
                    android:background="#00000000"
                    android:contentDescription="button"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/notification" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/whiteCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background_routine_page"
                android:elevation="8dp"
                android:orientation="vertical"
                android:layout_marginTop="-60dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:textColor="@color/dark_blue"
                        android:text="Steps"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="170dp"
                        android:contentDescription="button"
                        android:layout_marginTop="5dp"
                        android:background="#00000000"
                        app:srcCompat="@drawable/edit" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textnull"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    android:layout_marginTop="100dp"
                    android:textColor="@color/grey"
                    android:visibility="gone"
                    android:text="No steps added. Tap on edit to add steps." />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/routiner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        android:elevation="16dp"
        android:padding="36dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveRoutineButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="Save Routine"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@color/blue_pastel_dark"
            app:cornerRadius="16dp"
            app:strokeColor="@color/light_pastel_blue"
            app:strokeWidth="2dp"
            android:elevation="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />
    </LinearLayout>

</FrameLayout>